<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/system"
        android:key="system_screen"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
	
	<CheckBoxPreference
            android:key="disable_bootaudio"
            android:title="@string/disable_bootaudio_title"
            android:persistent="false" />
	
	<com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="proximity_on_wake"
            android:title="@string/proximity_wake_title"
            android:summary="@string/proximity_wake_summary"
            android:defaultValue="true" />
		 
	<PreferenceScreen
            android:id="@+id/wakelock_blocker"
            android:title="@string/wakelock_blocker"
            android:fragment="com.android.settings.apocalypse.WakeLockBlocker" />
	    
	<PreferenceScreen
            android:id="@+id/system_app_remover"
            android:title="@string/system_app_remover"
            android:fragment="com.android.settings.slim.SystemappRemover" />
	    
        <CheckBoxPreference
            android:key="disable_fc_notifications"
            android:title="@string/disable_fc_notifications_title"
            android:summary="@string/disable_fc_notifications_summary"
            android:persistent="false" />         
	
</PreferenceScreen>
