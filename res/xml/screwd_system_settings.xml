<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/misc"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    
    <!-- Power Menu -->
    <PreferenceScreen
    	android:key="power_menu"
        android:title="@string/power_menu"
        android:fragment="com.android.settings.screwd.PowerMenu" />
	    
    <!-- Density Changer -->
    <PreferenceScreen
        android:key="density_changer"
        android:title="@string/lcd_density_title"
        android:fragment="com.android.settings.screwd.Density" />    

     <!-- Wakelock Blocker -->	
     <PreferenceScreen
     	android:key="wakelock_blocker"
        android:fragment="com.android.settings.screwd.WakeLockBlocker"
        android:title="@string/wakelock_blocker_title" />
     
     <!-- Disable FCs -->	
     <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="disable_fc_notifications"
        android:title="@string/disable_fc_notifications_title" />  				

</PreferenceScreen>
