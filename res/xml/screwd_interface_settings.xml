<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/ui"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">	
    
    <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.screwd.StatusBar"
        android:title="@string/statusbar" />
    
    <PreferenceCategory
        android:key="navbar_cat"
        android:title="@string/interface_navbar_cat" >

        <com.android.settings.screwd.SystemSettingSwitchPreference
            android:key="double_tap_sleep_navbar"
            android:title="@string/double_tap_sleep_nav_bar_title"
            android:summary="@string/double_tap_sleep_nav_bar_summary"
            android:defaultValue="false" />
	
	<SwitchPreference
            android:key="kill_app_longpress_back"
            android:title="@string/kill_app_longpress_back"
            android:summary="@string/kill_app_longpress_back_summary"/>

    </PreferenceCategory>							    	

</PreferenceScreen>
