<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen
        android:key="quick_settings"
        android:fragment="com.android.settings.screwd.QsSettings"
        android:title="@string/qs_title" />

    <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.screwd.StatusBar"
        android:title="@string/status_bar_title" />
	
    <PreferenceScreen
    	android:key="battery_style"
        android:fragment="com.android.settings.screwd.BatteryIconStyle"
        android:title="@string/status_bar_battery_cat_title" />
	
    <ListPreference
    	android:key="navigation_bar_height"
    	android:dialogTitle="@string/navigation_bar_height"
    	android:title="@string/navigation_bar_height"
    	android:entries="@array/navigation_bar_height_entries"
    	android:entryValues="@array/navigation_bar_height_values"
    	android:defaultValue="48"
    	android:persistent="false" />	
	
    <com.android.settings.screwd.SystemSettingSwitchPreference
        android:key="recents_show_hide_search_bar"
        android:title="@string/recents_show_searchbar"
        android:summary="@string/recents_show_searchbar_summary"
        android:defaultValue="false" />
	
     <ListPreference
     	android:key="toast_animation"
     	android:title="@string/toast_animation_title"
     	android:entries="@array/toast_animation_entries"
     	android:entryValues="@array/toast_animation_values"
     	android:persistent="false" />					    	

</PreferenceScreen>
