<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/notifications"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    	
	<!-- Notification counter -->
    	<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notif_count_title"
            android:summary="@string/status_bar_notif_count_summary"
            android:defaultValue="false" />
    
        <!-- Pulse notification light -->
        <PreferenceScreen
            android:key="notification_light"
            android:title="@string/notification_light_title"
            android:fragment="com.android.settings.notificationlight.NotificationLightSettings" />

        <!-- Battery light -->
        <PreferenceScreen
            android:key="battery_light"
            android:title="@string/battery_light_title"
            android:fragment="com.android.settings.notificationlight.BatteryLightSettings" />
	
	<!-- Spam Notifications -->	
	<PreferenceScreen
            android:title="@string/block_notifications_title"
            android:fragment="com.android.settings.screwd.SpamList" />
	    
	<!-- Heads up notifications -->
        <Preference
            android:key="heads_up_enabled"
            android:fragment="com.android.settings.screwd.HeadsUpSettings"
            android:title="@string/category_heads_up" />
	 
	<!-- Force expanded notifications -->    
	<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="force_expanded_notifications"
            android:title="@string/notification_force_expand_title"
            android:summary="@string/notification_force_expand_summary"
            android:defaultValue="false" />
	    
	<PreferenceScreen
            android:id="@+id/notification_colors"
            android:title="@string/cat_colors_title"
            android:fragment="com.android.settings.screwd.NotificationColorSettings" />      		

</PreferenceScreen>
