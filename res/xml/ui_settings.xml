<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/user_interface"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
	
	<PreferenceCategory
            android:title="@string/category_general">
	
		<PreferenceScreen
                	android:key="display_rotation"
                	android:fragment="com.android.settings.slim.DisplayRotation"
                	android:title="@string/display_rotation_title" />
			
		<PreferenceScreen
            		android:key="overscroll_effects"
            		android:fragment="com.android.settings.apocalypse.OverscrollEffects"
            		android:title="@string/ui_overscroll_title" />	
			
		<CheckBoxPreference
            		android:key="power_menu_onthego_enabled"
            		android:title="@string/power_menu_onthego_title"
            		android:summary="@string/power_menu_onthego_title_summary"
            		android:defaultValue="false" />		
	</PreferenceCategory>
	
		<ListPreference
            		android:key="expanded_desktop"
            		android:title="@string/power_menu_expanded_desktop"
            		android:entries="@array/expanded_desktop_entries"
            		android:entryValues="@array/expanded_desktop_values"
            		android:persistent="false" />

    		<CheckBoxPreference
            		android:key="expanded_desktop_no_navbar"
            		android:title="@string/power_menu_expanded_desktop"
            		android:persistent="true" />
	
	<PreferenceCategory
            android:title="@string/category_navigation">
	    
	    	<PreferenceScreen
        		android:id="@+id/pie_control"
        		android:fragment="com.android.settings.apocalypse.Pie"
        		android:title="@string/pie_controls_title" />
			
		<PreferenceScreen
            		android:key="gesture_anywhere"
            		android:fragment="com.android.settings.chameleonos.labs.gestureanywhere.GestureAnywhereSettings"
            		android:title="@string/gesture_anywhere_title" />
			
		<PreferenceScreen
			android:key="app_circle_bar"
			android:title="@string/app_circle_bar_title"
			android:fragment="com.android.settings.apocalypse.AppCircleSidebar" />		
	    
	</PreferenceCategory>
	
	<PreferenceCategory
            android:title="@string/category_statusbar">
	    
		<PreferenceScreen
                	android:key="statusbar_color_pref"
        		android:fragment="com.android.settings.apocalypse.StatusBarColor"
        		android:title="@string/custom_status_bar_header_title" />
			
		<PreferenceScreen
            		android:key="battery_style_pref"
            		android:fragment="com.android.settings.apocalypse.BatteryIconStyles"
            		android:title="@string/battery_icon_title"/>
			
		<CheckBoxPreference
            		android:key="toggle_carrier_logo"
            		android:title="@string/disable_carrier_logo"
            		android:defaultValue="true" />
		
		<CheckBoxPreference
        		android:key="status_bar_clock_lockscreen"
        		android:title="@string/status_bar_show_clock_lockscreen_title"
        		android:summary="@string/status_bar_show_clock_lockscreen_summary"
        		android:defaultValue="false" />
			
		<PreferenceScreen
        		android:id="@+id/tile_colors"
        		android:title="@string/color_tile_title"
        		android:fragment="com.android.settings.apocalypse.TileColors" />					
	
	</PreferenceCategory>      		
								
</PreferenceScreen>
