<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/header_category_screwd"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    
    <!-- User interface -->
    <PreferenceScreen
    	android:key="ui"
        android:fragment="com.android.settings.screwd.InterfaceSettings"
        android:title="@string/ui" />
    
    <!-- System -->
    <PreferenceScreen
    	android:key="system"
        android:fragment="com.android.settings.screwd.System"
        android:title="@string/system" />
	    
    <!-- Notifications -->
    <PreferenceScreen
    	android:key="notifications"
        android:fragment="com.android.settings.screwd.Notifications"
        android:title="@string/notifications"
	android:enabled="false" />
	
    <!-- Sound & volume -->
    <PreferenceScreen
    	android:key="sounds"
        android:title="@string/sounds"
        android:fragment="com.android.settings.screwd.SoundSettings" />	    

    <!-- Misc -->	
    <PreferenceScreen
    	android:key="misc"
        android:fragment="com.android.settings.screwd.Misc"
        android:title="@string/misc"
	android:enabled="false" />

</PreferenceScreen>
